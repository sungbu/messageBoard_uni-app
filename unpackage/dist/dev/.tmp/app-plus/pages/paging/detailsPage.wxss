.all {
  color: #707070;
  font-weight: 200;
  font-size: 35rpx;
}
.all .place {
  width: 100%;
  height: var(--status-bar-height);
  background-color: #FFFFFF;
}
.all .returnBtn {
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
}
.all .returnBtn ._i {
  -webkit-transform: rotate(180deg);
      -ms-transform: rotate(180deg);
          transform: rotate(180deg);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: inline-block;
  margin-left: 20rpx;
  text-align: center;
  background-color: #D3D3D3;
}
.all .messContent {
  padding: 30rpx;
}
.all .messContent .header {
  margin-top: 50rpx;
}
.all .messContent .header image {
  vertical-align: top;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 3rpx solid #707070;
  -webkit-box-shadow: 3px 4px 3px rgba(0, 0, 0, 0.15);
          box-shadow: 3px 4px 3px rgba(0, 0, 0, 0.15);
}
.all .messContent .header text {
  vertical-align: top;
  font-size: 30rpx;
  line-height: 70rpx;
  margin-left: 20rpx;
}
.all .messContent .header ._i {
  float: right;
  margin-right: 30rpx;
  font-size: 50rpx;
  color: #CD0707;
}
.all .messContent .content {
  margin-top: 40rpx;
}
.all .messContent .content text {
  display: block;
  margin-left: 30rpx;
  font-weight: 500;
  border: 1px solid #a0a0a0;
  padding: 10rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.15);
  line-height: 48rpx;
  -webkit-box-shadow: 4px 10px 20px rgba(0, 0, 0, 0.15);
          box-shadow: 4px 10px 20px rgba(0, 0, 0, 0.15);
}
.all .messContent .control {
  margin-top: 30rpx;
}
.all .messContent .control .date {
  display: inline-block;
  margin-left: 30rpx;
  font-size: 25rpx;
  text-indent: 0.5em;
  margin-top: 20rpx;
}
.all .messContent .control .btn {
  float: right;
  display: inline-block;
  margin-right: 40rpx;
  margin-top: 10rpx;
}
.all .messContent .control .btn view {
  display: inline-block;
  margin-right: 10rpx;
  padding: 8rpx;
}
.all .messContent .control .btn view text {
  font-size: 15rpx;
  margin-left: 5rpx;
}
.all .replayContent {
  padding: 5rpx 60rpx;
}
.all .replayContent text {
  font-size: 27rpx;
  font-weight: 500;
}
.all .comment {
  padding: 30rpx;
  color: #FFFFFF;
}
.all .comment input {
  background-color: #808080;
  text-indent: 1em;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 25rpx;
  -webkit-box-shadow: 4px 10px 20px rgba(0, 0, 0, 0.15);
          box-shadow: 4px 10px 20px rgba(0, 0, 0, 0.15);
}

